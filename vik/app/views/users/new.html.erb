<div>
  <div>
    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form_tag("/users/create") do %>
      <p>ユーザー名</p>
      <input type="text" name="name" value="<%= @user.name %>">

      <p>メールアドレス</p>
      <input type="text" name="email" value="<%= @user.email %>">

      <input type="submit" value="新規登録">
    <% end %>
  </div>
</div>