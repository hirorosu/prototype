<div class="c-my_page-title">
  <h1>詳細情報の設定</h1>
</div>

<div class="c-content1">
  <a href="<%= "/companies/my_page/#{@companies.id}" %>" class="c-edit-btn-back-link"><p class="c-edit-btn-back-word">もどる</p></a>

  <%= form_tag("/companies/#{@companies.id}/update") do %>
    <div class="l-margin l2-new">
      <div class="l2-items-new">
        <p class="l2-items-name">企業名</p>
        <input class="l2-input l2-bc-c" type="text" name="c_name" value="<%= @companies.c_name %>" placeholder="（例）株式会社vi_kosen">
      </div>
      <div class="l2-items-new">
        <p class="l2-items-name">メールアドレス</p>
        <input class="l2-input l2-bc-m" type="text" name="c_email" value="<%= @companies.c_email %>" placeholder="（例）test123@vi_kosen.com">
      </div>
      <div class="l2-items-new">
        <p class="l2-items-name">パスワード</p>
        <input class="l2-input l2-bc-k" type="password" name="c_password" value="<%= @companies.c_password %>">
      </div>
      <div class="l2-items-new">
        <p class="l2-items-name">電話番号</p>
        <input class="l2-input l2-bc-m" type="text" name="c_tel" value="<%= @companies.c_tel %>" placeholder="（例）000-1234-5678">
      </div>
      <div class="l2-items-new">
        <p class="l2-items-name">業界</p>
        <input class="l2-input l2-bc-m" type="text" name="c_industry" value="<%= @companies.c_industry %>" placeholder="（例）IT、教育、コンサル">
      </div>
      <div class="l2-items-new">
        <p class="l2-items-name">地域</p>
        <input class="l2-input l2-bc-m" type="text" name="c_place" value="<%= @companies.c_place %>" placeholder="（例）東京都目黒区">
      </div>
    </div>
    <!-- // l-margin-->
    <div class="c_edit-btn-save">
      <input class="c-my_page-img-btn" type="submit" value="保存">
    </div>
    <!-- // c_edit-btn-save -->
  <% end %>
</div>
<!-- // c-content1 -->





<div class="footer">
  <div class="footer-flex">
    <a href="/" class="footer-link"><p>お問い合わせ</p></a>
    <p class="footer-text">Powered by vi kosen.</p>
  </div>
</div>
